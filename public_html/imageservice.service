[Unit]
#/etc/systemd/system/
Description=Nodejs web server

[Service]
ExecStart=/usr/bin/nodejs /home/dejanc/projects/ImageResizeWebService/public_html/engine-gm.js
Restart=always
StandardOutput=syslog
