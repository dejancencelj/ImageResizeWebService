#!upstart
description "node.js image web server"
author      "dejan cencelj"

start on startup
stop on shutdown

script
    export HOME="/serverpackages"

    echo $$ > /var/run/engine-gm.pid
    exec sudo -u serverpackages nodejs /home/dejanc/ImageResizeWebService/public_html/engine-gm.js >> /var/log/engine-gm.log 2>&1
end script

pre-start script
    # Date format same as (new Date()).toISOString() for consistency
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/engine-gm.log
end script

pre-stop script
    rm /var/run/engine-gm.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/engine-gm.log
end script